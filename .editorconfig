root = true

# 所有文件的通用设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 文本文件
[*.{md,py,yml,yaml,json,toml,txt,sh,ini,cfg,conf}]
indent_style = space
indent_size = 4

# Python 文件
[*.py]
indent_style = space
indent_size = 4

# Markdown 文件
[*.md]
max_line_length = off
trim_trailing_whitespace = true

# YAML 文件
[*.{yml,yaml}]
indent_size = 2

# Shell 脚本
[*.{sh,bash}]
indent_size = 2

# JSON 文件
[*.json]
indent_size = 2